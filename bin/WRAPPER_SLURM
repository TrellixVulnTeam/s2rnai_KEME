#!/bin/bash
#SBATCH --job-name="s2RNA_snake"
#SBATCH --partition="niddk,norm"
#SBATCH --cpus-per-task=1
#SBATCH --time=48:00:00
#SBATCH --mem=700

source activate s2rnai

SNAKEFILE=$1
EXTRA=$2
CONFIG=$3

LOGS=../output/logs
if [[ ! -e $LOGS ]]; then mkdir -p $LOGS; fi

if [[ ! -e slurm_logs ]]; then mkdir -p slurm_logs; fi

(time snakemake \
    -p \
    --rerun-incomplete \
    --jobname "s.{rulename}.{jobid}.sh" \
    -j 100 \
    -k \
    --verbose \
    --cluster-config $CONFIG \
    --cluster "sbatch --partition {cluster.partition} --cpus-per-task {threads} --mem {cluster.mem} --gres {cluster.gres} --time {cluster.time} --output=slurm_logs/${SNAKEFILE}_${EXTRA}.o.%j --error=slurm_logs/${SNAKEFILE}_${EXTRA}.e.%j" \
    --latency-wait=60 \
    -s $SNAKEFILE \
    $EXTRA \
    ) > "$LOGS/${SNAKEFILE}_${EXTRA}.log" 2>&1

mail -s "$SNAKEFILE finished" $USER < "$LOGS/${SNAKEFILE}_${EXTRA}.log"
